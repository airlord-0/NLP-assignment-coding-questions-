# we're using nltk to do this, while it has stopwords
from nltk.corpus import stopwords

def remove_stopwords(text):
    stop_words = set(stopwords.words('english'))

    words = text.split()   # split sentence into words
    filtered_words = []

    for word in words:
        if word.lower() not in stop_words:
            filtered_words.append(word)

    return " ".join(filtered_words)


# Give some sample and try it
sample = "I am learning Natural Language Processing in Python"

print(remove_stopwords(sample))
